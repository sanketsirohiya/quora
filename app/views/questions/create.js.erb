<% if @question.errors.any? %>
noty({text: "<%= @question.errors.full_messages.first %>" , type: 'error' , timeout: 1000});
<% else %>
noty({text: 'Question was Created succesfully', type: 'success' , timeout: 1000});
$('#questions').prepend("<%= escape_javascript (render 'home/question', question: @question) %>");
$('#question_content').val("");
<% end %>	